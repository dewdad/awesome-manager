{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./temp",
    "jsx": "preserve",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "paths": {
      "@/*": [
        "../../src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../enable-check.d.ts"
  ]
}