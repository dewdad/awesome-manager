{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "storybook:serve",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "test:unit:watch",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "dev",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": []
    },
    {
      "type": "typescript",
      "tsconfig": "lib\\util\\tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "label": "Remove all release",
      "type": "shell",
      "command": "./lib/bin/remove-all-release.sh",
      "windows": {
        "command": ".\\lib\\bin\\remove-all=release.cmd"
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Quick deploy with now",
      "type": "shell",
      "command": "now ./dist",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
  ]
}